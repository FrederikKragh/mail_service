<h1> Emails </h1>

<%= form_tag emails_path, method: :get do %>
  <%= label_tag :start_date, "Start Date:" %>
  <%= date_field_tag :start_date %>

  <%= label_tag :end_date, "End Date:" %>
  <%= date_field_tag :end_date %>

  <%= submit_tag "Show Emails" %>
<% end %>


<% if @emails.any? %>
  <p><strong><%= pluralize(@email_count[:total], "email") %></strong> received from <%= @email_count[:start_date] %> to <%= @email_count[:end_date] %></p>

  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Subject</th>
      </tr>
    </thead>
    <tbody>
      <% @emails.each do |email| %>
        <tr>
          <td><%= email.date %></td>
          <td><%= email.subject %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No emails found in the selected date range.</p>
<% end %>
